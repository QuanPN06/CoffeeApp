<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:paddingLeft="10dp"
    android:background="@color/nen"
    android:orientation="vertical"

   >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#FFFFFF"

        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"> <!-- Đặt orientation sang ngang để các TextView và ShapeableImageView nằm ngang cạnh nhau -->

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_item_food_foodImg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coo2"
                app:shapeAppearanceOverlay="@style/ImageViewCircle" />

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:id="@+id/tv_item_food_foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Bạc Sỉu"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_item_food_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_marginLeft="10dp"
                    android:text="100% coffee nguyên chất"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:textSize="12dp"
                    android:maxLines="1"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_item_food_foodPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:text="50000"
                        android:textColor="#FB001C"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="đ"
                        android:textColor="#FB001C"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>